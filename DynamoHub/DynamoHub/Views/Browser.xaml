<Window x:Class="DynamoHub.Views.Browser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DynamoHub.Views"
             mc:Ignorable="d" Background="White"
        Width="450" Height="600" Title="GitHub repo">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="71"/>
            <RowDefinition Height="482"/>
        </Grid.RowDefinitions>
        <TreeView
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Loaded="TreeView_Loaded"
            MouseDoubleClick="TreeViewItem_OnItemSelected"
            BorderBrush="White" Grid.RowSpan="2">
        </TreeView>
        <Image
            Grid.Row="0"
            HorizontalAlignment="Left"
            Height="60"
            Margin="0,1,0,0"
            VerticalAlignment="Top"
            Width="60"
            Source="pack://application:,,,/DynamoHub;component/Resources/github-logo.png"/>

    </Grid>
</Window>
